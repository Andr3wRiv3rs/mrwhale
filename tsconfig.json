{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "tmp", "docs", "dist"]
}
